	statusindent = true
	boldheaders = true
	safemode = false
	savewindowsettings = true
[gui]
	historybrowser = git-dag
	editor = nvim
[diff]
    tool = meld
    colorMoved = default
[difftool]
	prompt = false
[difftool "meld"]
	cmd = meld "$LOCAL" "$REMOTE"
[difftool "webdiff"]
    cmd = webdiff "$LOCAL" "$REMOTE"
[merge]
    conflictstyle = diff3
    summary = true
	keepbackup = false
    tool = meld
[mergetool "meld"]
    cmd = meld --output "$MERGED" "$LOCAL" "$BASE" "$REMOTE"
[github]
	user = dparo
[pull]
	rebase = false
    default = current
[init]
	defaultBranch = master
[global]
[interactive]
    diffFilter = delta --color-only --features=interactive
[delta]
    navigate=true
    features = line-numbers decorations
    whitespace-error-style = 22 reverse
[delta "interactive"]
    keep-plus-minus-markers = true
